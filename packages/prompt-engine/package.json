{
  "name": "@pixelmind/prompt-engine",
  "version": "0.1.0",
  "description": "AI prompt engineering utilities for PixelMind AI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "gen:prompt": "node scripts/generate-prompts.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.0",
    "@pixelmind/shared": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  }
}
